<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.xindian.patient.mapper.PatientMapper">
    
    <resultMap type="Patient" id="PatientResult">
        <result property="patientId"    column="patient_id"    />
        <result property="patientName"    column="patient_name"    />
        <result property="patientNumber"    column="patient_number"    />
        <result property="patientAge"    column="patient_age"    />
        <result property="patientSex"    column="patient_sex"    />
        <result property="patientSource"    column="patient_source"    />
        <result property="patientPhone"    column="patient_phone"    />
        <result property="familyPhone"    column="family_phone"    />
        <result property="equipmentId"    column="equipment_id"    />
        <result property="monitoringStatus"    column="monitoring_status"    />
        <result property="bedNumber"    column="bed_number"    />
        <result property="caseHistoryNumber"    column="case_history_number"    />
        <result property="hospitalCode"    column="hospital_code"    />
    </resultMap>

    <sql id="selectPatientVo">
        select patient_id, patient_name, patient_number, patient_age, patient_sex, patient_source, patient_phone, family_phone, equipment_id, monitoring_status, bed_number, case_history_number, hospital_code from patient
    </sql>

    <select id="selectPatientList" parameterType="Patient" resultMap="PatientResult">
        <include refid="selectPatientVo"/>
        <where>  
            <if test="patientName != null  and patientName != ''"> and patient_name like concat('%', #{patientName}, '%')</if>
            <if test="patientNumber != null  and patientNumber != ''"> and patient_number like concat('%', #{patientNumber}, '%')</if>
            <if test="patientAge != null  and patientAge != ''"> and patient_age like concat('%', #{patientAge}, '%')</if>
            <if test="patientSex != null  and patientSex != ''"> and patient_sex like concat('%', #{patientSex}, '%')</if>
            <if test="patientSource != null  and patientSource != ''"> and patient_source like concat('%', #{patientSource}, '%')</if>
            <if test="patientPhone != null  and patientPhone != ''"> and patient_phone like concat('%', #{patientPhone}, '%')</if>
            <if test="familyPhone != null  and familyPhone != ''"> and family_phone like concat('%', #{familyPhone}, '%')</if>
            <if test="equipmentId != null  and equipmentId != ''"> and equipment_id like concat('%', #{equipmentId}, '%')</if>
            <if test="monitoringStatus != null  and monitoringStatus != ''"> and monitoring_status like concat('%', #{monitoringStatus}, '%')</if>
            <if test="bedNumber != null  and bedNumber != ''"> and bed_number like concat('%', #{bedNumber}, '%')</if>
            <if test="caseHistoryNumber != null  and caseHistoryNumber != ''"> and case_history_number like concat('%', #{caseHistoryNumber}, '%')</if>
            <if test="hospitalCode != null  and hospitalCode != ''"> and hospital_code like concat('%', #{hospitalCode}, '%')</if>
        </where>
    </select>
    
    <select id="selectPatientByPatientId" parameterType="String" resultMap="PatientResult">
        <include refid="selectPatientVo"/>
        where patient_id = #{patientId}
    </select>
        
    <insert id="insertPatient" parameterType="Patient">
        insert into patient
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="patientId != null">patient_id,</if>
            <if test="patientName != null and patientName != ''">patient_name,</if>
            <if test="patientNumber != null and patientNumber != ''">patient_number,</if>
            <if test="patientAge != null">patient_age,</if>
            <if test="patientSex != null">patient_sex,</if>
            <if test="patientSource != null">patient_source,</if>
            <if test="patientPhone != null">patient_phone,</if>
            <if test="familyPhone != null">family_phone,</if>
            <if test="equipmentId != null">equipment_id,</if>
            <if test="monitoringStatus != null">monitoring_status,</if>
            <if test="bedNumber != null">bed_number,</if>
            <if test="caseHistoryNumber != null">case_history_number,</if>
            <if test="hospitalCode != null and hospitalCode != ''">hospital_code,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="patientId != null">#{patientId},</if>
            <if test="patientName != null and patientName != ''">#{patientName},</if>
            <if test="patientNumber != null and patientNumber != ''">#{patientNumber},</if>
            <if test="patientAge != null">#{patientAge},</if>
            <if test="patientSex != null">#{patientSex},</if>
            <if test="patientSource != null">#{patientSource},</if>
            <if test="patientPhone != null">#{patientPhone},</if>
            <if test="familyPhone != null">#{familyPhone},</if>
            <if test="equipmentId != null">#{equipmentId},</if>
            <if test="monitoringStatus != null">#{monitoringStatus},</if>
            <if test="bedNumber != null">#{bedNumber},</if>
            <if test="caseHistoryNumber != null">#{caseHistoryNumber},</if>
            <if test="hospitalCode != null and hospitalCode != ''">#{hospitalCode},</if>
         </trim>
    </insert>

    <update id="updatePatient" parameterType="Patient">
        update patient
        <trim prefix="SET" suffixOverrides=",">
            <if test="patientName != null and patientName != ''">patient_name = #{patientName},</if>
            <if test="patientNumber != null and patientNumber != ''">patient_number = #{patientNumber},</if>
            <if test="patientAge != null">patient_age = #{patientAge},</if>
            <if test="patientSex != null">patient_sex = #{patientSex},</if>
            <if test="patientSource != null">patient_source = #{patientSource},</if>
            <if test="patientPhone != null">patient_phone = #{patientPhone},</if>
            <if test="familyPhone != null">family_phone = #{familyPhone},</if>
            <if test="equipmentId != null">equipment_id = #{equipmentId},</if>
            <if test="monitoringStatus != null">monitoring_status = #{monitoringStatus},</if>
            <if test="bedNumber != null">bed_number = #{bedNumber},</if>
            <if test="caseHistoryNumber != null">case_history_number = #{caseHistoryNumber},</if>
            <if test="hospitalCode != null and hospitalCode != ''">hospital_code = #{hospitalCode},</if>
        </trim>
        where patient_id = #{patientId}
    </update>

    <delete id="deletePatientByPatientId" parameterType="String">
        delete from patient where patient_id = #{patientId}
    </delete>

    <delete id="deletePatientByPatientIds" parameterType="String">
        delete from patient where patient_id in 
        <foreach item="patientId" collection="array" open="(" separator="," close=")">
            #{patientId}
        </foreach>
    </delete>
</mapper>