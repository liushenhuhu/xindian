<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.xindian.patient_management.mapper.PatientManagementMapper">

    <resultMap type="PatientManagement" id="PatientManagementResult">
        <result property="pId" column="p_id"/>
        <result property="patientCode" column="patient_code"/>
        <result property="hospitalCode" column="hospital_code"/>
        <result property="equipmentCode" column="equipment_code"/>
        <result property="connectionTime" column="connection_time"/>
        <result property="bedNumber" column="bed_number"/>
        <result property="caseHistoryNumber" column="case_history_number"/>
        <association property="patient"
                     javaType="com.ruoyi.xindian.patient.domain.Patient"
                     resultMap="com.ruoyi.xindian.patient.mapper.PatientMapper.PatientResult">
        </association>
        <association property="hospital"
                     javaType="com.ruoyi.xindian.hospital.domain.Hospital"
                     resultMap="com.ruoyi.xindian.hospital.mapper.HospitalMapper.HospitalResult">
        </association>

    </resultMap>

    <sql id="selectPatientManagementVo">
        select *
        from patient_management m
                 inner join patient p on p.patient_code = m.patient_code
                 inner join equipment e on m.equipment_code = e.equipment_code
                 inner join hospital h on m.hospital_code = h.hospital_code
    </sql>

    <select id="selectPatientManagementList" parameterType="PatientManagement" resultMap="PatientManagementResult">
        <include refid="selectPatientManagementVo"/>
        <where>
            <if test="patient != null and patient.patientName != null  and patient.patientName != ''">and patient_name like concat('%',
                #{patient.patientName}, '%')
            </if>
            <if test="patientCode != null  and patientCode != ''">and m.patient_code like concat('%',
                #{patientCode}, '%')
            </if>
            <if test="hospitalCode != null  and hospitalCode != ''">and m.hospital_code like concat('%', #{hospitalCode},
                '%')
            </if>
            <if test="equipmentCode != null  and equipmentCode != ''">and m.equipment_code like concat('%',
                #{equipmentCode}, '%')
            </if>
            <if test="connectionTime != null ">and connection_time like concat('%', #{connectionTime}, '%')</if>
            <if test="bedNumber != null  and bedNumber != ''">and bed_number like concat('%', #{bedNumber}, '%')</if>
            <if test="caseHistoryNumber != null  and caseHistoryNumber != ''">and case_history_number like concat('%',
                #{caseHistoryNumber}, '%')
            </if>
        </where>
    </select>

    <select id="selectPatientManagementByPId" parameterType="String" resultMap="PatientManagementResult">
        <include refid="selectPatientManagementVo"/>
        where p_id = #{pId}
    </select>

    <insert id="insertPatientManagement" parameterType="PatientManagement" useGeneratedKeys="true" keyProperty="pId">
        insert into patient_management
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="patientCode != null and patientCode != ''">patient_code,</if>
            <if test="hospitalCode != null and hospitalCode != ''">hospital_code,</if>
            <if test="equipmentCode != null and equipmentCode != ''">equipment_code,</if>
            <if test="connectionTime != null">connection_time,</if>
            <if test="bedNumber != null">bed_number,</if>
            <if test="caseHistoryNumber != null">case_history_number,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="patientCode != null and patientCode != ''">#{patientCode},</if>
            <if test="hospitalCode != null and hospitalCode != ''">#{hospitalCode},</if>
            <if test="equipmentCode != null and equipmentCode != ''">#{equipmentCode},</if>
            <if test="connectionTime != null">#{connectionTime},</if>
            <if test="bedNumber != null">#{bedNumber},</if>
            <if test="caseHistoryNumber != null">#{caseHistoryNumber},</if>
        </trim>
    </insert>

    <update id="updatePatientManagement" parameterType="PatientManagement">
        update patient_management
        <trim prefix="SET" suffixOverrides=",">
            <if test="patientCode != null and patientCode != ''">patient_code = #{patientCode},</if>
            <if test="hospitalCode != null and hospitalCode != ''">hospital_code = #{hospitalCode},</if>
            <if test="equipmentCode != null and equipmentCode != ''">equipment_code = #{equipmentCode},</if>
            <if test="connectionTime != null">connection_time = #{connectionTime},</if>
            <if test="bedNumber != null">bed_number = #{bedNumber},</if>
            <if test="caseHistoryNumber != null">case_history_number = #{caseHistoryNumber},</if>
        </trim>
        where p_id = #{pId}
    </update>

    <delete id="deletePatientManagementByPId" parameterType="String">
        delete
        from patient_management
        where p_id = #{pId}
    </delete>

    <delete id="deletePatientManagementByPIds" parameterType="String">
        delete from patient_management where p_id in
        <foreach item="pId" collection="array" open="(" separator="," close=")">
            #{pId}
        </foreach>
    </delete>
</mapper>
